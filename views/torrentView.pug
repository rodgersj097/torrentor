extends layout 
mixin tableRow
    tr
              th(scope="row")
                span.name.mb-0.text-sm Test
              td.budget
                | $2500 USD
              td
                span.badge.badge-dot.mr-4
                  i.bg-warning
                  span.status pending
              td
                .d-flex.align-items-center
                  span.completion.mr-2 60%
                  div
                    .progress
                      .progress-bar.bg-warning(role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;")
              td.text-right
                .dropdown
                  a.btn.btn-sm.btn-icon-only.text-light(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                    i.fas.fa-ellipsis-v
                  .dropdown-menu.dropdown-menu-right.dropdown-menu-arrow
                    a.dropdown-item(href="#" data-hash="") Delete


block content
    div.main-content.mainDiv
        p Magnet Contents:
        ul#content
        p Client Magnets:
        ul#magnets
            li N/A
        p Client Stats:
        ul#stats
            li Progress: 0%
            li downloadSpeed: 0 Byte/s
            li ratio: 0
        p Client Errors:
        ul#errors
            li N/A
        video(autoplay="" src="" height="360px" controls="")

    .table-responsive.halfWidth
      div
        table.table.align-items-center
          thead.thead-light
            tr
              th.sort(scope="col" data-sort="name") Torrent
              th.sort(scope="col" data-sort="budget") Size
              th.sort(scope="col" data-sort="status") Status
              th.sort(scope="col" data-sort="completion") Completion
              th(scope="col")
          tbody.list
            +tableRow